[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = normal
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow bold
	changed = green bold
	untracked = cyan bold

[alias]
	bl = blame -b -w
	br = branch
	bra = branch -a
	dc = diff --cached
	st = status
	ss = status -sb
	su = status -sb -uno
	di = diff
	ci = commit
	co = checkout
	cp = cherry-pick
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lol = log --oneline --graph --decorate
	lop = log -p
	who = shortlog -s --
	# Reset
        unstage = reset HEAD --         # Mixed reset (affects HEAD and Index)
        undo = reset --soft HEAD~1      # Undo last commit (affects HEAD only)
        reset = reset --hard HEAD~1     # Remove last commit (from HEAD, Index and Working Dir)

[commit]
        template = ~/.gitmessage

[push]
	default = current
